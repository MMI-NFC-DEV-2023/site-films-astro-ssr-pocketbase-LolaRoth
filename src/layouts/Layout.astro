---
import "../styles/global.css";

interface Props {
  pageTitle: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <nav class="pb-6">
      <a href="/">Accueil</a>
      <a href="/personne">Liste des personnes</a>
      <a href="/film">Liste des films</a>
      <a href="/auth-password">Authentification</a>
      <a href="/auth-github">Authentification avec github</a>
      <a href="/personne/edit">Ajouter une personne</a>
    </nav>
    <slot />
  </body>
</html>
