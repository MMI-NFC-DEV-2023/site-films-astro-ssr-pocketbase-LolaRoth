---
import "../styles/global.css";

interface Props {
  pageTitle: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <nav
      class="pb-6 bg-black text-white flex justify-center items-center flex-wrap gap-6"
    >
      <a href="/" class="mt-5">Accueil</a>
      <a href="/personne" class="mt-5">Liste des personnes</a>
      <a href="/film" class="mt-5">Liste des films</a>
      <a href="/auth-password" class="mt-5">Authentification</a>
      <a href="/auth-github" class="mt-5">Authentification avec GitHub</a>
      <a href="/personne/edit" class="mt-5">Ajouter une personne</a>
    </nav>

    <slot />
  </body>
</html>
